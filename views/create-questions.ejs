<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head.ejs") %>
  <body>
    <%- include("partials/header.ejs") %>

    <div class="container">
      <h1 class="border-bottom">Create Question</h1>
      <form class="my-4" action="/create-questions" method="post">
        <div class="form-floating mb-3">
          <input
            name="question"
            type="text"
            class="form-control"
            id="floatingInput"
            placeholder="" />
          <label for="floatingInput">Question</label>
        </div>

        <div class="form-floating mb-3">
          <input
            name="answer"
            type="text"
            class="form-control"
            id="floatingInput"
            placeholder="" />
          <label for="floatingInput">Answer</label>
        </div>

        <div class="col-12">
          <button class="btn btn-primary" type="submit">Save</button>
        </div>
      </form>

      <% if (locals.message){ %>
      <div
        class="toast fade show"
        role="alert"
        aria-live="assertive"
        aria-atomic="true">
        <div class="d-flex">
          <div class="toast-body"><%= message %></div>
          <button
            type="button"
            class="btn-close me-2 m-auto"
            data-bs-dismiss="toast"
            aria-label="Close"></button>
        </div>
      </div>
      <% } %>
    </div>

    <%- include("partials/footer.ejs") %>
  </body>
</html>
